#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

my $fstab = '
# /etc/fstab: static file system information.
# <file system> <mount point>   <type>  <options>       <dump>  <pass>
proc        /proc           proc    nodev,noexec,nosuid 0 0
tmpfs       /tmp            tmpfs   defaults,noatime,nodev,nosuid,mode=1777 0 0
LABEL=root  /               btrfs   defaults,noatime 0 1
LABEL=home  /home           btrfs   defaults,noatime 0 2
LABEL=stuff /media/stuff    btrfs   defaults,auto,noatime,nofail,x-systemd.device-timeout=1  0 2
';

sub main(@){
  getRoot();
  $fstab =~ s/^\n//g;
  open FH, "> /etc/fstab";
  print FH $fstab;
  close FH;
}

&main(@ARGV);
