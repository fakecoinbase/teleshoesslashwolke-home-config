#!/usr/bin/perl
use strict;
use warnings;
use lib `dirname $0 | tr -d '\n'`;
use ScriptScript;

sub main(@){
  getRoot();
  run qw(update-command-not-found);
  my $escribeHosts = getHome . "/bin/escribe-hosts";
  $escribeHosts = which "escribe-hosts" if not -e $escribeHosts;
  runUser $escribeHosts;

  run qw(sudo rm /etc/localtime);
  run qw(sudo ln -s /usr/share/zoneinfo/US/Eastern /etc/localtime);

  symlinkFile "/opt", "$ENV{HOME}/conf/opt";
  symlinkFile "/var/opt", "$ENV{HOME}/conf/var-opt";
  symlinkFile "/usr/bin/perl-5.10", "perl";

  run "sudo", "mnt", "--other";
  runUser "klomp-update";
}

&main(@ARGV);
