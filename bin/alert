#!/usr/bin/perl
use strict;
use warnings;

my $alertDir = "soothing";

my $usage = "Usage:
  $0 -h | --help
    print this message

  $0 ALERT_DIR_SOUND_NAME
    run: alarm -s $alertDir/ALERT_DIR_SOUND_NAME
    (alert dir is '$alertDir/')
";

sub main(@){
  if(@_ == 1 and $_[0] =~ /^(-h|--help)$/){
    print $usage;
    exit 0;
  }elsif(@_ == 1){
    exec "alarm", "-s", "$alertDir/$_[0]";
  }else{
    die $usage;
  }
}

&main(@ARGV);
