#!/bin/bash
PAGE_WIDTH_PCT="43.00"
OFFSET_PCT="3.54"
NUM_PAGES_WIDE="1"
RES_W=`res -w`
RES_H=`res -h`

width=`echo "$RES_W * $PAGE_WIDTH_PCT / 100 * $NUM_PAGES_WIDE" | bc`
offset=`echo "$RES_H * $OFFSET_PCT / 100" | bc`
height=`echo "$RES_H - $offset" | bc`
geometry="${width}x${height}+0+${offset}"

echo "GEOMETRY: $geometry"

feh -g ${width}x${height}+0+${offset} $1
