#!/usr/bin/perl
use strict;
use warnings;

my $file = "/tmp/klomp-bar-ipmagic";
my $default = 'local';

my $usage = "Usage:
  $0 -h|--help   print this message
  $0 -g|--get    print current klomp-bar
  $0             set klomp-bar=$default
  $0 ARG         set klomp-bar=ARG
";

sub get(){
  if(not -e $file){
    return $default;
  }else{
    my $s = `cat $file`;
    chomp $s;
    return $s;
  }
}

sub set($){
  my $s = shift;
  if($s eq 'local'){
    system "rm", $file;
  }else{
    system "echo $s > $file";
  }
}

sub main(@){
  my $cur = get;
  my $arg = shift();
  $arg = $default if not defined $arg;
  die $usage if $arg =~ /^-h|--help$/ or @_ > 0;

  if($arg =~ /^-g|--get$/){
    print get() . "\n";
  }elsif($arg ne get){
    set $arg;
  }
}

&main(@ARGV);
