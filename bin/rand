#!/usr/bin/perl
use strict;
use warnings;
use List::Util qw(shuffle);

my $usage = "Usage:
  $0 -h|--help
    show this message

  $0
    print a random real number between 0 and 1 using perl's rand()

  $0 ITEM [ITEM] [ITEM]
    randomly select one of the given ITEMs and print it
";

sub main(@){
  if(@_ == 1 and $_[0] =~ /^(-h|--help)$/){
    die $usage;
  }

  my @items;
  if(@_ > 0){
    @items = @_;
  }else{
    @items = rand();
  }

  while(@items > 1){
    @items = shuffle @items;
    pop @items;
  }

  my $item = $items[0];
  chomp $item;
  print "$item\n";
}

&main(@ARGV);
