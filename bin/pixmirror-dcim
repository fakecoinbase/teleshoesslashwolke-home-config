#!/usr/bin/perl
use strict;
use warnings;

my $TARGET_SIZE = '1920x1080';
my $SRC_DIR = "$ENV{HOME}/DCIM";
my $DEST_DIR = "$ENV{HOME}/DCIM-pixmirror";

sub run(@);

sub main(@){
  run "pixmirror", "--size=$TARGET_SIZE", "--orient", $SRC_DIR, $DEST_DIR;
}

sub run(@){
  print "@_\n";
  #system @_;
}

&main(@ARGV);
