#!/usr/bin/perl
use strict;
use warnings;

my $usage = "Usage:
  $0 ACC_NAME
    play alert sounds for emails
";

sub main(@){
  my ($accName) = @_;
  die $usage if not defined $accName;

  if($accName =~ "G"){
    system "alert", "jumpdown";
  }elsif($accName =~ "L"){
    system "alert", "jumpup";
  }
}

&main(@ARGV);
