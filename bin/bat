#!/usr/bin/perl
use strict;
use warnings;

my $DIR = "/sys/class/power_supply/BAT0";

sub main(@){
  my $energy_now = `cat $DIR/energy_now`;
  chomp $energy_now;
  my $energy_full = `cat $DIR/energy_full`;
  chomp $energy_full;
  my $power_now = `cat $DIR/power_now`;
  chomp $power_now;

  my $percent = 100.0 * $energy_now / $energy_full;

  my $time = `date +%H:%M:%S`;
  chomp $time;

  printf "\n%d%%\n%.1fW\n%s", $percent, $power_now/1000000.0, $time;
}

&main(@ARGV);
